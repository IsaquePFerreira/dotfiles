#!/usr/bin/env bash

# dmenu theming
lines="-l 3"
font="-fn Inconsolata-15"
colors="-sb #088600 -sf #181a17"

first_prompt="O que você quer?"
opt1="Sair do bspwm\nReiniciar\nDesligar"
opt2="Sim\nNão"


ask() {
    answer="$( echo -e $1 | dmenu -i -p "$2" $lines $colors $font )"
}

ask "$opt1" "$first_prompt"

case $answer in
    "Sair do bspwm")
        ask "$opt2" "Quer mesmo sair do bspwm?"
        if [[ $answer == "Sim" ]]; then
            bspc quit
        fi
        exit 0
        ;;
    "Reiniciar")
        ask "$opt2" "Quer mesmo reiniciar o sistema?"
        if [[ $answer == "Sim" ]]; then
            systemctl reboot
        fi
        exit 0
        ;;
    "Desligar")
        ask "$opt2" "Quer mesmo desligar o computador?"
        if [[ $answer == "Sim" ]]; then
            systemctl poweroff
        fi
        exit 0
        ;;
esac

exit 0
