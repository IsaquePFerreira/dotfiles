#         background #000000
#         focused_workspace  #00ff00   #00ff00   #000000
#         inactive_workspace #32323200 #32323200 #5c5c5c
#     }
# }

# Iniciar aplicações junto com o Sway
# Audio
exec pipewire &
# Status bar
exec waybar &

